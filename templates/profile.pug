html(lang="en")
head
    meta(charset="UTF-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    meta(name="description",content="Alles Identity Test")
    title=title
    style. 
        body, html {
            padding: 0;
            margin: 0;
            font-family: 'Inter', 'Segoe UI', system-ui, Tahoma, Geneva, Verdana, sans-serif;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        img {
            width: 3rem;
            height: 3rem;
            border-radius: 9999px;
        }
body
    h1 Profile Information
    p Id: #{id}
    p Name: #{name}
    p Avatar: #{avatar}
    img(src=avatar)
    p Email: #{email}
    p Country: #{country}